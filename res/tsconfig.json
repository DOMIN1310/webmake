{
  "compilerOptions": {
    "target": "es2016",
    "module": "es6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "outDir": "./js"
  },
  "exclude": ["node_modules", "tailwind.config.js"],
  "include": ["./ts/**/*.ts"],
}